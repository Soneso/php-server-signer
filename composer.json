{
    "name": "soneso/php-server-signer",
    "description": "Client domain signing server for Stellar SEP-10 and SEP-45 authentication",
    "type": "library",
    "license": "Apache-2.0",
    "authors": [
        {
            "name": "Soneso",
            "email": "info@soneso.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "soneso/stellar-php-sdk": "^1.8.0",
        "guzzlehttp/guzzle": "^7.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "Soneso\\ServerSigner\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Soneso\\ServerSigner\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
